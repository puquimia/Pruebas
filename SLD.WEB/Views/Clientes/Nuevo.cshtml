
@{
    ViewBag.Title = "Nuevo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Cliente</h3>
<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Informacion general</h3>
            </div>
            <div class="box-body">
                <div class="form-group">
                    <label>Código <span class="obligatorio">*</span></label>
                    <input type="text" class="form-control" id="txbCodigo" autocomplete="off" />
                </div>
                <div class="form-group">
                    <label>Nombre <span class="obligatorio">*</span></label>
                    <input type="text" class="form-control" id="txbNombre" autocomplete="off" />
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Tipo de documento <span class="obligatorio">*</span></label>
                            <select id="ddlTipoDocumento" class="form-control">
                                <option value="">----Seleccione----</option>
                                @foreach (var item in (List<Estaticos>)ViewData["TiposDocumento"])
                                {
                                    <option value="@item.Codigo">@item.Valor</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Número de documento <span class="obligatorio">*</span></label>
                            <input type="text" class="form-control" id="txbDocumento" autocomplete="off" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label>E-mail <span class="obligatorio">*</span></label>
                    <input type="text" class="form-control" id="txbEmail" autocomplete="off" />
                </div>
            </div>
            <div class="box-footer">

                <a class="btn btn-success" id="btnGuardar">Guardar</a>
                @Html.ActionLink("Volver", "Index", "Clientes", null, new { @class = "btn btn-success" })
            </div>
        </div>
    </div>
</div>
@section Scripts{ 
    <script type="text/javascript" src="~/Scripts/js/Cliente.js"></script>
}

