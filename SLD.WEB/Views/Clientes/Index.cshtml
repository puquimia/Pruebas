
@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Cliente> lClientes = (List<Cliente>)ViewData["Clientes"];
}

<h3>Clientes</h3>
<div class="row">
    <div class="col-md-10">
        @Html.ActionLink("Nuevo cliente", "Nuevo", "Clientes", null, new { @class = "btn btn-success" })
        <div class="box box-primary" style="margin-top: 5px;">
            <div class="box-body">
                <div>
                    @if (lClientes.Count() > 0)
                    {
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th scope="col"></th>
                                    <th scope="col">Codigo</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Tipo de documento</th>
                                    <th scope="col">Documento</th>
                                    <th scope="col">Email</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var eCliente in lClientes)
                                {
                                    <tr>
                                        <td></td>
                                        <td>@eCliente.Codigo</td>
                                        <td>@eCliente.Nombre</td>
                                        <td>@eCliente.NombreTipoDocumento</td>
                                        <td>@eCliente.Documento</td>
                                        <td>@eCliente.Email</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div>Sin resultados.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

