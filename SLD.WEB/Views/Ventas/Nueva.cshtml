
@{
    ViewBag.Title = "Nueva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Nueva venta</h3>
<div class="row">
    <div class="col-md-10">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Cliente</label>
                    <input type="text" class="form-control" id="txbCliente" autocomplete="off" placeholder="Especifique un cliente" />
                </div>
            </div>
            <div class="col-md-2">
                <input type="button" id="btnAgregarProductos" style="margin-top:30px;" class="btn btn-primary" value="Agregar productos" />
            </div>
            <div class="col-md-2">
                <input type="button" style="margin-top:30px;" class="btn btn-success" value="Guardar" />
            </div>
        </div>
        <div class="box box-primary" style="margin-top: 5px;">
            <div class="box-body">
                <div>
                    <table class="table table-striped table-hover" style="width: 100%;">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Codigo</th>
                                <th>Nombre producto</th>
                                <th>Cantidad</th>
                                <th>P/U</th>
                                <th>Descuento</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody id="tbodyDetalleVenta">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="divProductos" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-target=".bd-example-modal-lg">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Productos</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table>
                    <thead>
                        <tr>
                            <th></th>
                            <th>Codigo</th>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Stock</th>
                        </tr>
                    </thead>
                    <tbody id="tbodyProductos"></tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>

        </div>
    </div>
</div>

<script type="text/x-jsrender" id="tmpProductos">
    {{for Productos}}
        <tr>
            <td></td>
            <td>{{>Codigo}}</td>
            <td>{{>Nombre}}</td>
            <td>{{>Precio}}</td>
            <td>{{>Stock}}</td>
        </tr>
    {{/for}}
</script>
@section Scripts{
    <script type="text/javascript" src="~/Scripts/js/Venta.js"></script>
}

